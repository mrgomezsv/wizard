<odoo>
    <data>
        <record model="ir.ui.view" id="trprov_overhead_tr_form">
            <field name="name">trprov.overhead.tr.form</field>
            <field name="model">trprov.overhead.tr</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="report_from_date"/>
                            <field name="report_to_date" invisible="1"/>
                        </group>
                        <group>
                            <field name="categ_ids"/>
                        </group>
                    </group>
                    <footer>
<!--                        <button name="validate" string="Generar" type="object" class="oe_highlight"/>-->
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="trprov_overhead_action" model="ir.actions.act_window">
            <field name="name">Estado de Resultado con Overheard</field>
            <field name="res_model">trprov.overhead.tr</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

 <!-- Definir el menú para acceder a la vista de árbol -->
        <menuitem name="Estados de resultados por vendedor" id="trprov_overhead_tr_menu_base" parent="account.menu_finance_reports" sequence="600"/>
        <menuitem name="Overhead por vendedor" id="trprov_overhead_tr_menu" parent="trprov_overhead_tr_menu_base" action="trprov_overhead_action" sequence="10"/>
    </data>
</odoo>

